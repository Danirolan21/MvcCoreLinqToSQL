@model List<Empleado>

	<h1> Empleados Linq To SQL</h1>

	<table class="table table-light table-striped">
		<thead>
			<tr>
				<th>
					Emp_no
				</th>
				<th>
					Apellido
				</th>
				<th>
					Oficio
				</th>
				<th>
					Detalles
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(Empleado emp in Model) {
				<tr>
					<td>@emp.IdEmpleado</td>
					<td>@emp.Apellido</td>
					<td>@emp.Oficio</td>
					<td>
						<a asp-action="Details"
						asp-controller="Empleados"
						asp-route-idEmpleado="@emp.IdEmpleado">
							Details
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>